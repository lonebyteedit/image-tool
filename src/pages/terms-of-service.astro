--- 
import "@/styles/global.css";
import HeaderSimple from "@/components/Header/HeaderSimple.astro";
import Footer from "@/components/Footer/Footer.tsx";
import LegalDoc from "@/components/Legal/Legal.tsx";
import { getTranslations } from "@/i18n/utils.ts";

const t = getTranslations('en'); // Get english translations for header
---

<!doctype html>
<html lang="en" dir="ltr">
    <head>
        <script is:inline>
            (function () {
                try {
                    const theme = localStorage.getItem("theme");
                    if (
                        theme === "dark" ||
                        (!theme &&
                            window.matchMedia("(prefers-color-scheme: dark)")
                                .matches)
                    ) {
                        document.documentElement.classList.add("dark-mode");
                    }
                } catch (e) {}
            })();
        </script>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
        <title>Terms of Service - Image Tool</title>
        <meta name="description" content="Terms of Service for image-tool.org, the free and private online image conversion tool." />
    </head>
    <body>
        <div class="container">
            <HeaderSimple themeToggleTitle={t.static.themeToggle_title} />
            <main>
                <LegalDoc title="Terms of Service">
